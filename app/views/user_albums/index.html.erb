<p id="notice"><%= notice %></p>

<h1>Listing User Albums</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_albums.each do |user_album| %>
      <tr>
        <td><%= user_album.user %></td>
        <td><%= user_album.album %></td>
        <td><%= link_to 'Show', user_album %></td>
        <td><%= link_to 'Edit', edit_user_album_path(user_album) %></td>
        <td><%= link_to 'Destroy', user_album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

