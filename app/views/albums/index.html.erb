<h1>Albums</h1>
<%= link_to '+ New Album', new_album_path %>

    <% @albums.each do |album| %>
      <article class="album">
        <h2><%= album.title %> <span class="release-date">(<%= album.release_date %>)</span></h2>
        <h3><%= album.band_name %></h3>
        <p><%= album.description %></p>
        <p><%= link_to 'Show', album %> | <%= link_to 'Edit', edit_album_path(album) %> | <%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure you want to delete #{album.name}?' } %></p>
        <hr>
        </article>
    <% end %>
